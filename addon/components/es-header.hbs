<header
  class="es-header"
  role="banner"
  ...attributes
>
  <nav class="es-navbar {{if this.expanded "navbar-expanded"}}" aria-label="Primary site navigation">
    <a class="navbar-brand-wrapper" href={{this.navHome}}>
      <img
        class="navbar-brand"
        src="/images/ember-logo.svg"
        alt="home"
        width="83"
        height="40"
      >
    </a>

    <button
      class="navbar-toggler"
      aria-label="{{if this.expanded "Hide" "Show"}}  Site Navigation"
      type="button"
      aria-expanded={{if this.expanded "true" "false"}}
      {{on "click" this.onTogglerClick}}
    >
      Menu
    </button>

    <ul class="navbar-list">
      {{#each this.navLinks as |link|}}
        <EsHeaderNavbarLink @link={{link}} />
      {{/each}}
    </ul>

    {{#if (has-block)}}
      <div class="navbar-end">
        {{yield}}
      </div>
    {{/if}}
  </nav>
</header>