{{#bs-navbar
  collapsed=collapsed
  onCollapse=(action (mut collapsed) true)
  onExpand=(action (mut collapsed) false)
  type='inverse' as |navbar|}}
  <div class="navbar-header">
    {{navbar.toggle}}
    {{#link-to "index" class="navbar-brand"}}
      <img
        src="https://glimmer-styleguide.global.ssl.fastly.net/glimmer-styleguide/master/images/ember-logo.svg"
        alt="home">
    {{/link-to}}
  </div>
  {{#navbar.content}}
    {{#navbar.nav as |nav|}}
      {{#each links as |link|}}
        {{#nav.item}}
          {{#if (eq link.type 'link')}}
            <a href="{{link.href}}" {{action navbar.collapse}}>{{link.name}}</a>
          {{/if}}
          {{#if (eq link.type 'dropdown')}}
            {{#bs-dropdown tagName="li" as |dd|}}
              {{#dd.toggle}}{{link.name}} <span class="caret"></span>{{/dd.toggle}}
              {{#dd.menu as |menu|}}
                {{#each link.items as |item|}}
                  {{#if (eq item.type 'link')}}
                    {{#menu.item}}
                      <a href="{{item.href}}" class="dropdown-item" {{action navbar.collapse}}>{{item.name}}</a>
                    {{/menu.item}}
                  {{/if}}
                  {{#if (eq item.type 'divider')}}
                    {{menu.divider}}
                  {{/if}}
                {{/each}}
              {{/dd.menu}}
            {{/bs-dropdown}}
          {{/if}}
        {{/nav.item}}
      {{/each}}
    {{/navbar.nav}}
    <form class="navbar-form navbar-right searchbox">
      <div class="input-group">
        <label for="search-input" class="control-label sr-only">Search</label>
        <input type="text"
               class="form-control search input ds-input"
               placeholder="Search..."
               id="search-input"
               role="combobox"
               aria-expanded="false"
               aria-owns="algolia-autocomplete-listbox-0"
               autocorrect="off"
               autocapitalize="none"
               spellcheck="false"
        />
        <span></span>
      </div>
    </form>
  {{/navbar.content}}
{{/bs-navbar}}

